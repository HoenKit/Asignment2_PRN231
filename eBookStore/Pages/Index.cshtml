@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Login</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p style="color: red">@Model.ErrorMessage</p>
}

<form method="post">
    <div>
        <label>Email:</label>
        <input type="email" asp-for="LoginDto.Email" required />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" asp-for="LoginDto.Password" required />
    </div>
    <button type="submit">Login</button>
</form>
