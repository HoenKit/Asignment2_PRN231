@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2 class="text-center mb-4">Login</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
}

<div class="d-flex justify-content-center">
    <form method="post" class="p-4 shadow rounded bg-light" style="width: 350px;">
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" asp-for="LoginDto.Email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" asp-for="LoginDto.Password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>
