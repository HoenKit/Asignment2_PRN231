@page
@model eBookStore.Pages.Authors.CreateModel
@{
}
<h2>Add Author</h2>

<form method="post">
    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="Author.last_name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="Author.first_name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input asp-for="Author.phone" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Author.address" class="form-control" required />
    </div>
    <div class="form-group">
        <label>City</label>
        <input asp-for="Author.city" class="form-control" required />
    </div>
    <div class="form-group">
        <label>State</label>
        <input asp-for="Author.state" class="form-control" required />
    </div>
    <div class="form-group">
        <label>ZIP</label>
        <input asp-for="Author.zip" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Author.email_address" class="form-control" type="email" required />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
