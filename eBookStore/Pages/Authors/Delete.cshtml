@page
@model eBookStore.Pages.Authors.DeleteModel
@{
}
<h2>Delete Author</h2>

<h3>Are you sure you want to delete this author?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Author.first_name @Model.Author.last_name</h4>
        <p><strong>Phone:</strong> @Model.Author.phone</p>
        <p><strong>Address:</strong> @Model.Author.address, @Model.Author.city, @Model.Author.state, @Model.Author.zip</p>
        <p><strong>Email:</strong> @Model.Author.email_address</p>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Author.author_id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
