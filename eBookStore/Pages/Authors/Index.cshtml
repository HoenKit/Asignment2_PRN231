@page
@model eBookStore.Pages.Authors.IndexModel
@{
}
<h2>Author List</h2>
<a asp-page="Create" class="btn btn-primary">Add Author</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>ZIP</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td>@author.author_id</td>
                <td>@author.last_name</td>
                <td>@author.first_name</td>
                <td>@author.phone</td>
                <td>@author.address</td>
                <td>@author.city</td>
                <td>@author.state</td>
                <td>@author.zip</td>
                <td>@author.email_address</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@author.author_id" class="btn btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@author.author_id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
